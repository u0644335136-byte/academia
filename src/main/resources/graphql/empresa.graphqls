type Empresa {
    id: ID!
    cif: String!
    nombreLegal: String!
    razonSocial: String
    representante: String
}

extend type Query {
    allEmpresas: [Empresa!]!
    empresaById(id: ID!): Empresa
}


input EmpresaInput {
    cif: String!
    nombreLegal: String!
    razonSocial: String
    representante: String
}


extend type Mutation {
    createEmpresa(input: EmpresaInput!): Empresa!
    updateEmpresa(id: ID!, input: EmpresaInput!): Empresa!
    deleteEmpresa(id: ID!): Boolean!
}